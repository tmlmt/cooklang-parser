{
  "entryPoints": ["./src"],
  "entryPointStrategy": "resolve",
  "out": "./docs/api",
  "docsRoot": "./docs",
  "navigation": {
    "includeCategories": true,
    "includeGroups": false,
    "includeFolders": false,
    "compactFolders": true,
    "excludeReferences": true
  },
  "sort": ["alphabetical"],
  "disableSources": true,
  "categorizeByGroup": false,
  "plugin": ["typedoc-plugin-markdown", "typedoc-vitepress-theme"]
}
